{
	"name": "@repo/judgeenignev3",
	"module": "index.ts",
	"type": "module",
	"private": true,
	"devDependencies": {
		"@repo/typescript-config": "*",
		"@repo/db": "*",
		"@repo/redis-client": "*",
		"@repo/types": "*",
		"@types/bun": "latest",
		"concurrently": "^9.2.1",
		"nodemon": "^3.1.11"
	},
	"scripts": {
		"build": "tsc -b ",
		"start": "bun run ./dist/redis/redis-init.js &&  pm2 delete judge-engine || true && pm2 start ./dist/src/index.js -i 2 --name judge-engine",
